<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'layouts/flash' %>
			<%= form_for(@book) do |f| %>
				<%= render 'layouts/error_messages', model: f.object %>
			<% end %>
			<%= render 'layouts/userinfo', {book: @book, user: @user} %>
		</div>
		<div class="col-xs-9">  <!-- ここを追加 -->
			<h1>Book detail</h1>
			<table class="table table-striped">
				<tbody>
			        <td>
			        	<%= link_to user_path(@user.id) do %>
			        		<%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
			        		<br>
			        		<%= @user.name %>
			        	<% end %>
			        </td>
			        <td><%= link_to @book.title, book_path(@book.id) %></td>
			        <td><%= @book.body %></td>

			        <% if @book.user_id == current_user.id %>
						<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
						<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>