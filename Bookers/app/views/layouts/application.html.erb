<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="row">
            <div class="col-xs-1">
              <h3>Bookers</h3>
            </div>
            <div id="slidemenu">
              <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
                <% if user_signed_in? %>
                  <div class="col-xs-2">
                    <li class="">
                      <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", user_path(current_user.id) %></span>
                    </li>
                  </div>
                  <div class="col-xs-2">
                    <li class="">
                      <span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to 'Users', user_registration_path %></span>
                    </li>
                  </div>
                  <div class="col-xs-2">
                    <li class="">
                      <span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "Books", books_path %></span>
                    </li>
                  </div>
                  <div class="col-xs-4">
                    <li class="">
                      <span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to 'logout', destroy_user_session_path , method: :delete %></span>
                    </li>
                  </div>
                <% else %>
                  <div class="col-xs-2">
                    <li class="">
                      <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", root_path %></span>
                    </li>
                  </div>
                  <div class="col-xs-2">
                    <li class="">
                      <span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to "About", home_about_path %></span>
                    </li>
                  </div>
                  <div class="col-xs-4">
                    <li class="">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to "Sign up", new_user_registration_path %></span>
                    </li>
                  </div>
                  <div class="col-xs-3">
                    <li class="">
                      <span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to "login", new_user_session_path %></span>
                    </li>
                  </div>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </div>

    <%= yield %>

    <div id="footer">
      <p>CopyRight Infratop.inc</p>
    </div>
  </body>
</html>
