<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
    	<th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  	<% books.each do |book| %>
      <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
      </tr>
  	<% end %>
  </tbody>
</table>